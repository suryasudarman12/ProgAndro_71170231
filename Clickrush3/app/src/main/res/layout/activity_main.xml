<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Your Score : 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score_view"
            android:padding="20dp"

            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Time left : 60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_view"
            android:padding="20dp"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="Tap Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_tap"
            android:padding="8dp"
            android:textAlignment="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/text_hasil"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.23"/>
    <TextView
            android:text="Time's up Your Score was : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_hasil"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>